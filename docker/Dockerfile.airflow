# ============================================
# AIRFLOW COM DOCKER CLI
# ============================================
# Permite executar docker exec de dentro do Airflow
# para rodar jobs Spark no cluster
# ============================================

FROM apache/airflow:2.10.3

USER root

# Instalar Docker CLI
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        docker.io \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

USER airflow
